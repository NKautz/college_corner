<%= form_with(model: picture, local: true) do |form| %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> prohibited this submission from being executed:</h2>

      <ul>
      <% picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :title, placeholder: "School Name" %>
  </div>

  <div class="field">
    <%= form.text_field :abbreviation, placeholder: "Abbreviation" %>
  </div>

  <div class="field">
    <%= form.text_field :description, placeholder: "Description" %>
  </div>

  <div class="field">
    <%= form.text_field :url, placeholder: "Image URL" %>
  </div>

  <div class="actions">
    <%= form.submit :Submit %>
  </div>
<% end %>
